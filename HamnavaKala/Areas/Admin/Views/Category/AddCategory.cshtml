@model Category
@{
    ViewData["Title"] = "افزودن دسته بندی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12" style="margin-top:100px">
    <div class="card-box">
        <h4 class="header-title m-t-0 m-b-30">افزودن دسته بندی</h4>

        <form asp-action="AddCategory"  method="post">

            <input asp-for="SubCategory" value="@ViewBag.id" hidden />

            <div class="form-group">
                <label asp-for="CategoryFaName"></label>
                <input asp-for="CategoryFaName" type="text"  class="form-control">
                <span asp-validation-for="CategoryFaName" class="text-danger "></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryEnName"></label>
                <input asp-for="CategoryEnName" type="text" class="form-control">
                <span asp-validation-for="CategoryEnName" class="text-danger "></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
    <!-- end col -->

</div>
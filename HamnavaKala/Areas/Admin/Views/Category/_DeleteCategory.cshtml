
@model Category

<div class="row">
    <h2 class="text-center text-info" style="margin-top:-15px;">حذف دسته بندی</h2>
    <div class="col-md-12">
        <form asp-action="DeleteCategory" method="post"
              data-ajax="true"
              data-Success="Refresh"
              enctype="multipart/form-data">


            <input asp-for="SubCategory" hidden />

            <input asp-for="CategoryId" hidden />


            <div class="form-group">
                <label asp-for="CategoryFaName"></label>
                <input readonly asp-for="CategoryFaName" type="text" class="form-control">
                <span asp-validation-for="CategoryFaName" class="text-danger "></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryEnName"></label>
                <input readonly asp-for="CategoryEnName" type="text" class="form-control">
                <span asp-validation-for="CategoryEnName" class="text-danger "></span>
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
                <button type="submit" value="Create" class="btn btn-danger">حذف</button>
            </div>

        </form>
    </div>
</div>
@model Slider
@{
    ViewData["Title"] = "افزودن سلایدر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


    <div class="col-lg-12"  style="margin-top:100px">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30">افزودن سلایدر</h4>

            <form asp-action="AddSlider" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label asp-for="SliderTitle"></label>
                    <input asp-for="SliderTitle" type="text" required="" placeholder="عنوان سلایدر را وارد کنید" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="SliderSort"></label>
                    <input asp-for="SliderSort" type="text" required="" placeholder="ترتیب سلایدر را وارد کنید" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="SliderLink"></label>
                    <input asp-for="SliderLink" type="text" required="" placeholder="لینک سلایدر را وارد کنید" class="form-control">
                </div>
                <div class="form-group">
                    <label  asp-for="SliderAlt"></label>
                    <input asp-for="SliderAlt" type="text" required="" placeholder="آلت سلایدر را وارد کنید" class="form-control">
                </div>
                <div class="form-group">
                    <label  asp-for="ImgSlider"></label>
                    <input asp-for="ImgSlider" type="file" name="file" class="form-control">
                    <span asp-validation-for="ImgSlider" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <input asp-for="IsActive" id="remember-1" type="checkbox" data-parsley-multiple="remember-1" data-parsley-id="13">
                        <label asp-for="IsActive" for="remember-1">حالت نمایش </label>
                    </div>
                </div>

                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        تایید
                    </button>
                    <a asp-action="index" class="btn btn-default waves-effect waves-light m-l-5">
                        لغو
                    </a>
                </div>

            </form>
        </div>
   <!-- end col -->

 </div>
@model Slider
@{
    ViewData["Title"] = "حذف سلایدر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12" style="margin-top:100px">
    <div class="card-box">


        <h4 class="header-title m-t-0 m-b-30">حذف سلایدر</h4>

        <form asp-action="DeleteSlider" enctype="multipart/form-data" method="post">
            <input hidden asp-for="SliderId" />
            <input type="hidden" asp-for="ImgSlider" />
            <div class="alert alert-info">
                <h3 style="text-align:center">آیا از حذف سلایدر با عنوان <strong>@Model.SliderTitle</strong> مطمین هستید؟</h3>
            </div>
            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    تایید حذف
                </button>
                <a asp-action="index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
    <!-- end col -->

</div>


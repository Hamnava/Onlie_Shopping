@model ProductColor
@{
    ViewData["Title"] = "افزودن رنگ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/AdminPanel/assets/plugins/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet">

<div class="col-lg-12" style="margin-top:100px">
    <div class="card-box">
        <h4 class="header-title m-t-0 m-b-30">افزودن سلایدر</h4>

        <form asp-action="AddProductColor" method="post">
            <div class="form-group">
                <label asp-for="colorName"></label>
                <input asp-for="colorName" type="text" required="" placeholder="نام رنگ را وارد کنید" class="form-control">
            </div>

            <span class="text-danger">@Html.ValidationMessage("ModelError")</span>

            <div class="form-group">
                <label asp-for="colorCode"> </label>
                <input asp-for="colorCode" type="text" class="colorpicker-rgba form-control" value="rgb(0,194,255,0.78)" data-color-format="rgba">
            </div>
            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
    <!-- end col -->

</div>

@section Scripts{
    <script src="~/AdminPanel/assets/plugins/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
<script>
    $('.colorpicker-rgba').colorpicker();
</script>
}
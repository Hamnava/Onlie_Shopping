@model ProductProperty

<div class="row">
    <h2 class="text-center text-info" style="margin-top:-15px;">حذف خصوصیت محصول </h2>
    <div class="col-md-12">
        <form asp-action="DeleteProperty" method="post"
              data-ajax="true"
              data-Success="Refresh"
              enctype="multipart/form-data">

            <h3>آیا از حذف خصوصیت محصول با نام <span class="text-success">@Model.ProductPropertyTitle</span> مطمین هستید؟</h3>

            <input asp-for="ProductPropertyId" hidden />


            <div class="form-group">
                <input  readonly asp-for="ProductPropertyTitle" type="text" class="form-control hidden">
            </div>

            <div class="form-group">
                <input hidden readonly asp-for="IsDelete" type="text" class="form-control hidden">
            </div>

            <div class="form-group text-right mx-4">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
                <button type="submit" value="Create" class="btn btn-danger">حذف اطلاعات</button>
            </div>

        </form>
    </div>
</div>